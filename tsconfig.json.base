{
    "compilerOptions": {
        "target": "es6",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!build/**",
        "!node_modules/**",
        "!typings/main.d.ts",
        "!typings/main/**"
    ],
    "compileOnSave": false,
    "buildOnSave": false,
    "files": [
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
